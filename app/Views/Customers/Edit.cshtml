@using Microsoft.AspNetCore.Http
@model app.Models.Customer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Edit";
}

<partial name="Guide" />

<div class="main">
    <partial name="Menu" />
    <form id="request" class="request" action="Edit" method="post">
        <input class="field__input" type="hidden" id="id" name="id" value="@Model.Id" />
        <input class="field__input" type="hidden" id="type" name="type" value="Client" />
        <div class="titlepage">
            <h2>Modifier le client @Model.Numero</h2>
        </div>
        <partial name="AddEdit" />
    </form>
</div>

